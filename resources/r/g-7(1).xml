<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:kf="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <solid android:color="@color/callout_background"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="100dp"/>
                <solid android:color="@color/igds_primary_button"/>
            </shape>
        </scale>
    </item>
</layer-list>
